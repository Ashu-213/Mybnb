<% layout("/layouts/boilerplate") %>
<script>
    const mapToken = "<%= process.env.MAPBOX_TOKEN %>";
    mapboxgl.accessToken = mapToken;
    const listing = <%- JSON.stringify(listing) %>;
</script>

    <div class="row">
        <div class=" offset-2 mb-3">

            <h3 <b>
                <%= listing.title %></b>
                    <br>
            </h3>
            <div class="card col-6 offset-2">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image">
                <div class="card-body">
                    <p class="card-text">owned by: <i>
                            <%= listing.owner ? listing.owner.username : 'Unknown' %>
                        </i></p>
                    <p>
                        <%= listing.description %>
                    </p>
                    <br>
                    <p>&dollar;<%= listing.price.toLocaleString('en-US') %> per night</p>
                    <br>
                    <p>
                        <%= listing.country %>, <%= listing.location %>
                    </p>

                </div>
            </div>

            <div class="col-10 offset-2 mt-3 mb-5">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
            </div>
            <div class="col-1">
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger delete-listing-btn">Delete</button>
                </form>
            </div>

            <!-- reveiws -->
            <div>
                <hr>
                <h4>Write a Reveiw</h4>

                <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">

                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">


                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="Comments" class="form-label"> Comments </label>
                        <textarea type="text" id="comments" name="review[comments]" cols="5" rows="5"
                            class="form-control"></textarea>
                        <div class="invalid-feedback">Please Submit valid review</div>
                    </div>
                    <br>
                    <button class="btn btn-outline-dark">Submit Reveiw</button>
                </form>

            </div>

            <hr>
            <!-- reviews -->
            <h4>Reviews</h4>
            <% if(listing.reviews && listing.reviews.length> 0) { %>
                <% for(let review of listing.reviews) { %>
                    <div class="card mt-3">
                        <div class="card-body">
                            <p class="card-title">By: <b>@<%= review.author ? review.author.username : 'Deleted User' %>
                                </b></p>
                            <p class="starability-result card-text" data-rating="<%= review.rating %>">
                                Rated: <%= review.rating %> stars
                            </p>

                            <p class="card-text">
                                <%= review.comments %>
                            </p>
                            <p class="card-text"><small class="text-muted">Posted on <%= new
                                        Date(review.createdAt).toLocaleDateString() %></small></p>

                        </div>
                        <!-- to delete the review -->
                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                            method="POST" class="mb-3">
                            <button class="btn-sm btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>
                        <% } else { %>
                            <p class="text-muted">No reviews yet. Be the first to write a review!</p>
                            <% } %>


        </div>
        <div class="col-6 offset-2 mb-3">
            <h4>Where you'll be</h4>
            <div id="map"></div>
        </div>
    </div>


    <script src="/js/map.js"></script>