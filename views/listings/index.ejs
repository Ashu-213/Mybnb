<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/CSS/listings.css">

    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-house"></i></div>
            <p>Homes</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Outdoors</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>
        
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Winter</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tree"></i></div>
            <p>Nature</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Urban</p>
        </div>
        
        <!-- toggle switch -->
        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display Total Price</label>
            </div>
        </div>

    </div>

    <!-- Search Results Message -->
    <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
        <div class="container mt-3">
            <div class="alert alert-info" role="alert">
                <% if (listings.length > 0) { %>
                    Found <%= listings.length %> result<%= listings.length !== 1 ? 's' : '' %> for "<strong><%= searchQuery %></strong>"
                    <a href="/listings" class="alert-link ms-2">Clear search</a>
                <% } else { %>
                    No results found for "<strong><%= searchQuery %></strong>"
                    <a href="/listings" class="alert-link ms-2">View all listings</a>
                <% } %>
            </div>
        </div>
    <% } %>

    <div class="row">
        <% for(let listing of listings) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4 mt-3">
                <a href="/listings/<%= listing._id %>" class="listing-links">
                    <div class="card h-100">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>"
                            style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title"><b>
                                    <%= listing.title %>
                                </b></h5>
                            <p class="card-text"><strong>$<%= listing.price.toLocaleString('en-US') %></strong> per
                                night <i class="tax-info" style="display: none;"> &nbsp; &nbsp; +18% GST</i> </p>

                            <p class="card-text text-muted">
                                <%= listing.location %>, <%= listing.country %>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
    </div>

<script src="/js/listings.js"></script>