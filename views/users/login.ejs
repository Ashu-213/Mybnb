<% layout('layouts/boilerplate') %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Log In</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST">
                <div>
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" placeholder="enter Username" class="form-control" id="username" required>
                </div>
                <br><br>
                <div>
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" placeholder="enter Password" class="form-control"
                        id="password" required>
                </div>
                <br><br>
                <button type="submit" class="btn btn-primary">Log In</button>
            </form>
            <div class="mt-3">
                <p>Don't have an account? <a href="/signup" class="btn btn-success">Sign Up</a></p>
            </div>
        </div>

    </div>