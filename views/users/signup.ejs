<% layout('layouts/boilerplate') %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Sign Up</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div>
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" placeholder="enter Username" class="form-control"  id="username" required>
                    <div class="valid-feedback">Username Looks Good</div>
                </div>
                <br><br>
                <div>
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="email" placeholder="enter Email" class="form-control" id="email" required>
                    <div class="valid-feedback">Email Looks Good</div>
                </div>
                <br><br>
                <div>
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" placeholder="enter Password" class="form-control" id="password" required>
                    <div class="valid-feedback">Password Looks Good</div>
                </div>
                <br><br>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
            <div class="mt-3">
                <p>Already have an account? <a href="/login" class="btn btn-success">Log In</a></p>
            </div>
        </div>

    </div>